<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BingoMatchFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="@dimen/title"
        android:layout_marginTop="20dp"
        android:id="@+id/extractedText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/extractedText"
        android:layout_marginTop="10dp"
        android:id="@+id/extractedNum"
        android:textSize="@dimen/title"
        android:textAlignment="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/extractedNum"
        android:textSize="@dimen/title"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:id="@+id/bingo_board"
        android:text="The Bingo Board" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bingo_board"
        android:layout_marginTop="300dp"
        android:textSize="@dimen/title"
        android:textAlignment="center"
        android:id="@+id/bingo_cards"
        android:text="My Bingo Cards" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/bingo_cards"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="520dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/myCards_view">
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>