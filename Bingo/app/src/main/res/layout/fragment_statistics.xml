<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StatisticsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="60dp"
        android:id="@+id/stat_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/stat_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/stat_table"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="80dp">
        <TableRow>
            <TextView
                android:textSize="@dimen/title"
                android:textAlignment="center"
                android:background="@drawable/card_cell"
                android:padding="12dp"
                android:text="Matches Played" />
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="@dimen/title"
                android:textAlignment="center"
                android:background="@drawable/card_cell"
                android:padding="12dp"
                android:text="Matches Won" />
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="@dimen/title"
                android:textAlignment="center"
                android:background="@drawable/card_cell"
                android:padding="12dp"
                android:text="Ambos achieved" />
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="@dimen/title"
                android:textAlignment="center"
                android:background="@drawable/card_cell"
                android:padding="12dp"
                android:text="Ternos achieved" />
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="@dimen/title"
                android:textAlignment="center"
                android:background="@drawable/card_cell"
                android:padding="12dp"
                android:text="Quaternos achieved" />
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="@dimen/title"
                android:textAlignment="center"
                android:background="@drawable/card_cell"
                android:padding="12dp"
                android:text="Cinquinos achieved" />
        </TableRow>
        <TableRow>
            <TextView
                android:textSize="@dimen/title"
                android:textAlignment="center"
                android:background="@drawable/card_cell"
                android:padding="12dp"
                android:text="Bingos achieved" />
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>